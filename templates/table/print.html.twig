{% extends 'base.html.twig' %}

{% block title %}Table de {{ n }}{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('assets/css/bootstrap.min.css')}}">
{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
</style>

<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <a class="navbar-brand" href="#">Localhost</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor02" aria-controls="navbarColor02" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarColor02">
        <ul class="navbar-nav mr-auto">
        <li class="nav-item">
            <a class="nav-link" href="/">Accueil</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="/select">Select<span class="sr-only">(current)</span></a>
        </li>
        </ul>
    </div>
</nav>

<div class="example-wrapper">
    <h1>Table de {{ n }} :</h1>
    <hr/>

    <table>
        {# {% if limit == 0 %}
            {% for i in range(0, 10) %}
                <tr><td>{{ i }}</td><td> x </td><td>{{ n }}</td><td>= {{i*n}}</td></tr>
            {% endfor %}
        {% else %}
            {% for i in range(0, limit) %}
                <tr><td>{{ i }}</td><td> x </td><td>{{ n }}</td><td>= {{i*n}}</td></tr>
            {% endfor %}
        {% endif %}  #}

        {% set index = 0 %}
        {% for value in values %}
            <tr><td>{{ index }}</td><td> x </td><td>{{ n }}</td><td>= {{ value }}</td></tr>
            {% set index = index + 1 %}
        {% endfor %}
    </table>
    
</div>
{% endblock %}
